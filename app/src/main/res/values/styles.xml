<resources>

    <style name="AppTheme.Light.WithActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="bottomNavigationBackground">@null</item>
        <item name="bottomNavigationItemColor">@null</item>

        <item name="android:windowBackground">@color/almostWhite</item>
    </style>

    <style name="AppTheme.Dark" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/darkColorPrimary</item>
        <item name="colorPrimaryDark">@color/darkColorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="bottomNavigationBackground">@color/darkColorPrimary</item>
        <item name="bottomNavigationItemColor">@drawable/bottom_navigation_item_color_dark</item>

        <item name="colorControlNormal">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="titleTextColor">@android:color/white</item>
        <item name="subtitleTextColor">@android:color/white</item>
        <item name="popupTheme">@style/AppTheme.PopupTheme.Dark</item>

        <item name="android:windowBackground">@color/darkColorPrimaryDark</item>
        <item name="android:textColor">@color/colorAccent</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Dark.WithActionBar" parent="AppTheme.Dark">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="bottomNavigationBackground">@null</item>
        <item name="bottomNavigationItemColor">@null</item>

        <item name="colorControlNormal">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="titleTextColor">@android:color/white</item>
        <item name="subtitleTextColor">@android:color/white</item>
        <item name="popupTheme">@style/AppTheme.PopupTheme</item>

        <item name="android:windowBackground">@color/almostWhite</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.WithActionBar" parent="AppTheme">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>
    </style>

    <style name="AppTheme.PopupTheme">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="AppTheme.PopupTheme.Dark" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@color/darkColorPrimaryDark</item>
    </style>

    <style name="AppTheme.Dialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="AppTheme.Dialog.Dark" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:background">@color/darkColorPrimaryDark</item>
        <item name="android:windowBackground">@color/darkColorPrimaryDark</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="BigDialog" parent="android:Theme.Dialog">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="MainContentWidthStyle" />

</resources>
